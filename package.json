{
  "name": "prismize",
  "version": "1.2.1",
  "description": "Display code in HTML using Prism.JS to do syntax highlighting.",
  "main": "prismize.min.js",
  "scripts": {
    "start": "npx babel src --watch --out-dir .",
    "build": "npx babel src --out-dir . && minify prismize.js --out-file prismize.min.js",
    "pack": "npm run build && npm pack"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/westc/prismize.git"
  },
  "keywords": [
    "Prism.JS"
  ],
  "author": "Chris West",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/westc/prismize/issues"
  },
  "homepage": "https://github.com/westc/prismize#readme",
  "devDependencies": {
    "@babel/cli": "^7.17.10",
    "@babel/core": "^7.18.5",
    "@babel/preset-env": "^7.18.2",
    "babel-minify": "^0.5.2"
  }
}
